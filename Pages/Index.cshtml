@page
@model MacReportViewer.Pages.IndexModel
@{
    ViewData["Title"] = "Device List";
}

<div class="container">
    <h1 class="mt-4">Device List</h1>

    @if (Model.Devices.Count > 0)
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>MAC Address</th>
                    <th>Last Report Timestamp</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model.Devices)
                {
                    <tr>
                        <td>@device.MacAddress</td>
                        <td>@(device.LastReportTimestamp?.ToString("yyyy-MM-dd HH:mm:ss") ?? "No reports")</td>
                        <td>
                            <a class="btn btn-primary" href="/reports?macAddress=@device.MacAddress">View Reports</a>
                            <a class="btn btn-secondary" href="/config?macAddress=@device.MacAddress">Edit Config</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-4">No devices found in the Data folder.</div>
    }
</div>